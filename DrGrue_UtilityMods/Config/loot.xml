<config>

<!-- This will log as a WRN to create a log entry on startup showing this file was read -->
	<remove xpath="/Successfully_Loaded[@modname='DrGrue_UtilityMods'][@version='A21.E'][@filename='\Config\loot.xml']" />
	
<!-- Increase the chance to get at least 1 egg to 50% and ~25% to get an additional 1-2 eggs -->
	<append xpath="/lootcontainers/lootgroup[@name='groupBirdNest01']">
		<item name="foodEgg" count="1"/>
	</append>

<!-- Adds 'Fiver' Token to Rare Ores, Apache Artifact Chest, Buried Treasures, and Mountain Man Chest -->
	<append xpath="/lootcontainers/lootgroup[@name='rareOres']">
		<item name="Duke's 'Fiver' Token" count="1" prob="0.02"/> <!-- 1 in 1000 -->
	</append>
	<!-- Apache Artifact Chest -->>
	<append xpath="/lootcontainers/lootgroup[@name='groupRottenChest02']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>	
	<append xpath="/lootcontainers/lootgroup[@name='groupRottenChest03']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>
	<!-- Buried Treasure Chest -->	
	<append xpath="/lootcontainers/lootgroup[@name='groupBuriedTreasure']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>
	<!-- Old West Chests -->	
	<append xpath="/lootcontainers/lootgroup[@name='groupOldWestChest01']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>	
	<append xpath="/lootcontainers/lootgroup[@name='groupOldWestChest02']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>
	
<!-- Adds Mega Token to Rare Ores, Apache Artifact Chest, Buried Treasures, and Mountain Man Chest -->
	<append xpath="/lootcontainers/lootgroup[@name='rareOres']">
		<item name="Duke's Mega Token" count="1" prob="0.01"/> <!-- 1 in 2000 -->
	</append>
	<!-- Apache Artifact Chest -->>
	<append xpath="/lootcontainers/lootgroup[@name='groupRottenChest02']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>
	<append xpath="/lootcontainers/lootgroup[@name='groupRottenChest03']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>	
	<!-- Buried Treasure Chest -->
	<append xpath="/lootcontainers/lootgroup[@name='groupBuriedTreasure']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>

	<!-- Old West Chests -->	
	<append xpath="/lootcontainers/lootgroup[@name='groupOldWestChest01']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>	
	<append xpath="/lootcontainers/lootgroup[@name='groupOldWestChest02']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>
	
<!-- Adds Santa Hat to loot list -->
	<append xpath="/lootcontainers/lootgroup[@name='groupApparelHats']" >
			<item name="armorSantaHat" mods="dye" mod_chance="0.00"/>
	</append>	

<!-- Adds sewing kit schematic to loot list -->
	<append xpath="/lootcontainers/lootgroup[@name='schematicsModsAndGeneralT0']">
		<item name="resourceSewingKitSchematic"/>
	</append>
	
<!-- Makes various containers as big as a storage box because I like to use them for storage -->
	<set xpath="/lootcontainers/lootcontainer[ends-with(@name, 'NOPOP')]/@size">8,9</set>	
	<!-- Bookcase -->
	<set xpath="/lootcontainers/lootcontainer[@name='bookcase']/@size">8,9</set>
	<!-- Pill Case -->
	<set xpath="/lootcontainers/lootcontainer[@name='medicineCabinet']/@size">8,9</set>
	<!-- Small Pill Case -->
	<set xpath="/lootcontainers/lootcontainer[@name='medicalPillCase']/@size">8,9</set>
	<!-- Small beer cooler -->
	<set xpath="/lootcontainers/lootcontainer[@name='beerCooler']/@size">8,9</set>
	<!-- Gas Pump -->
	<set xpath="/lootcontainers/lootcontainer[@name='gasPump']/@size">8,9</set>
	<!-- Large rolling toolbox -->
	<set xpath="/lootcontainers/lootcontainer[@name='rollingToolBox']/@size">8,9</set>
	
	
</config>