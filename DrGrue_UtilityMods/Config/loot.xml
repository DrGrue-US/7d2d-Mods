<config>

<!-- This will log as a WRN to create a log entry on startup showing this file was read -->
	<remove xpath="/Successfully_Loaded[@modname='DrGrue_UtilityMods'][@version='A19.0'][@filename='\Config\loot.xml']" />
	
<!-- Adds 'Fiver' Token to Rare Ores, Apache Artifact Chest, Buried Treasures, and Mountain Man Chest -->
	<append xpath="/lootcontainers/lootgroup[@name='rareOres']">
		<item name="Duke's 'Fiver' Token" count="1" prob="0.02"/> <!-- 1 in 1000 -->
	</append>
	<!-- Apache Artifact Chest -->>	
	<append xpath="/lootcontainers/lootcontainer[@id='56']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>
	<!-- Treasure Chest -->	
	<append xpath="/lootcontainers/lootcontainer[@id='61']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>
	<!-- Mountain Man Chest -->	
	<append xpath="/lootcontainers/lootcontainer[@id='63']">
		<item name="Duke's 'Fiver' Token" count="1,3" prob="0.005"/> <!-- 1 in 200 -->
	</append>
	
<!-- Adds Mega Token to Rare Ores, Apache Artifact Chest, Buried Treasures, and Mountain Man Chest -->
	<append xpath="/lootcontainers/lootgroup[@name='rareOres']">
		<item name="Duke's Mega Token" count="1" prob="0.01"/> <!-- 1 in 2000 -->
	</append>
	<!-- Apache Artifact Chest -->>
	<append xpath="/lootcontainers/lootcontainer[@id='56']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>
	<!-- Buried Treasure Chest -->
	<append xpath="/lootcontainers/lootcontainer[@id='61']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>
	<!-- Mountain Man Chest -->
	<append xpath="/lootcontainers/lootcontainer[@id='63']">
		<item name="Duke's Mega Token" count="1" prob="0.0025"/> <!-- 1 in 400 -->
	</append>
	
<!-- Adds Santa Hat to loot list -->
	<append xpath="/lootcontainers/lootgroup[@name='groupApparelHats']" >
			<item name="armorSantaHat" mods="dye" mod_chance="0.00"/>
	</append>	

<!-- Adds sewing kit schematic to loot list -->
	<append xpath="/lootcontainers/lootgroup[@name='schematicsModsAndGeneralT0']">
		<item name="resourceSewingKitSchematic"/>
	</append>
	
<!-- Makes various containers as big as a storage box because I like to use them for storage -->
	<!-- military munitions ammo box -->
	<set xpath="/lootcontainers/lootcontainer[@id='40']/@size">8,9</set>	
	<!-- Lockers -->
	<set xpath="/lootcontainers/lootcontainer[@id='43']/@size">8,9</set>	
	<!-- Refrigerator -->
	<set xpath="/lootcontainers/lootcontainer[@id='47']/@size">8,9</set>
	<!-- Bookcase -->
	<set xpath="/lootcontainers/lootcontainer[@id='49']/@size">8,9</set>
	<!-- Pill Case -->
	<set xpath="/lootcontainers/lootcontainer[@id='51']/@size">8,9</set>
	<!-- Small beer cooler -->
	<set xpath="/lootcontainers/lootcontainer[@id='52']/@size">8,9</set>
	<!-- Gas Pump -->
	<set xpath="/lootcontainers/lootcontainer[@id='64']/@size">8,9</set>
	<!-- Utility Cart -->
	<set xpath="/lootcontainers/lootcontainer[@id='117']/@size">8,9</set>
	<!-- Large rolling toolbox -->
	<set xpath="/lootcontainers/lootcontainer[@id='124']/@size">8,9</set>
	<!-- Small toolbox -->
