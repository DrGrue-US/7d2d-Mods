<config>

<!-- This will log as a WRN to create a log entry on startup showing this file was read -->
	<remove xpath="/Successfully_Loaded[@modname='DrGrue_UtilityMods'][@version='A19.0'][@filename='\Config\traders.xml']" />
	
<!-- Increases the number of decorative blocks available at the trader -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='decorativeBlocks']/@count">3</set>

<!-- Adds GasPump to trader inventory as a decorative block -->
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='decorativeBlocks']">
		<item name="cntGasPump"/>
	</append>	
	
</config>